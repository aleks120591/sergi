<?xml version="1.0" encoding="UTF-8"?>
<carrier
	title = "МТС (Пріпейд)">
	<group
		title = "Фінанси"
		icon="money">
		<command
			title="Баланс"
			description="Інформація про стан рахунку, термін дії послуги і тарифної моделі"
			template="*101#">
		</command>
		<command
			title="Перевести гроші"
			description="Запит на переведення грошей"
			template="*150*{phone}*{amount}#">
			<field
				title="Кому перерахувати"
				description="Виберіть номер телефону абонента, якому будуть перераховані гроші"
				tag="phone"
				type="contact">
				<modifier
					type="complete"
					template="380500000000"
				/>
			</field>
			<field
				title="Сума"
				description="Сума в гривнях, має бути кратна 5 грн"
				tag="amount"
				type="digits">
			</field>
		</command>
		<command
			title="Керування рахунком"
			description="Меню команд для управління рахунком"
			template="*121#">
		</command>
		<command
			title="Залишок інтернет пакету"
			description="Перевірка залишку пакетних МБ"
			template="*101*103#">
		</command>
	</group>
	<group
		title = "«Передзвони мені»"
		icon="callme">
		<command
			title="Запит"
			description="Запит послуги «Передзвони мені»"
			template="*104*{phone}#">

			<field
				title="Номер телефону"
				description="Виберіть номер телефону для відправки запиту"
				tag="phone"
				type="contact">
				<modifier
					type="complete"
					template="0500000000"
				/>
			</field>
		</command>
		<command
			title="Допомога"
			description="Інструкція українською мовою"
			template="*104#">
		</command>
		<command
			title="Доступно запитів"
			description="Інформація про кількість запитів, що залишилися, в рамках послуги «Передзвони мені»"
			template="*104*0#">
		</command>		
	</group>
	<group
		title = "Послуги"
		icon="services">
		<command
			title="„Вам дзвонили”"
			description="Оповіщення про дзвінки до вас поки ви були недоступні за допомогою СМС"
			template="*120*{action}#">
			<field
          title="Дія"
          description="Можна підключити чи відключити послугу"
          tag="action"
          type="select">
          <customData>
              <option text="Активувати" value="11"/>
              <option text="Деактивувати" value="12"/>
              <option text="Перевірити статус" value="1"/>
          </customData>
      </field>
		</command>
		<command
			title="„Є зв'язок”"
			description="Оповіщення коли абонент (якому ви не можете додзвонитись) знову стає доступним"
			template="*120*{action}#">
			<field
	          title="Дія"
	          description="Можна підключити чи відключити послугу"
	          tag="action"
	          type="select">
		          <customData>
		              <option text="Активувати" value="21"/>
		              <option text="Деактивувати" value="22"/>
		              <option text="Перевірити статус" value="2"/>
		          </customData>
	       </field>
		</command>
		<command
			title="„Я на зв'язку”"
			description="Інформувати інших про вашу появу в мережі."
			template="*120*{action}#">
			<field
		          title="Дія"
		          description="Можна підключити чи відключити послугу"
		          tag="action"
		          type="select">
		          <customData>
		              <option text="Активувати" value="31"/>
		              <option text="Деактивувати" value="32"/>
		              <option text="Перевірити статус" value="3"/>
		          </customData>
		      </field>
		</command>
		<command
			title="Режим „День/Ніч”"
			description="Можливість тимчасово відключити послуги «Вам дзвонили» та «Є зв'язок» з 23-00 до 7-00."
			template="*120*{action}#">
			<field
		          title="Дія"
		          description="Можна підключити чи відключити послугу"
		          tag="action"
		          type="select">
		          <customData>
		              <option text="Активувати" value="01"/>
		              <option text="Деактивувати" value="02"/>
		              <option text="Перевірити статус" value="0"/>
		          </customData>
		      </field>
		</command>
		<!-- <command
			title="IMEI код"
			description="IMEI код телефону"
			template="*#06#">
		</command>-->
	</group>
	<group
		title = "Супер">
		
		<command
			title="Бонуси"
			description="Залишок безкоштовних хвилин"
			template="*101*4#">
		</command>
		<command
			title="Гіпер.Нет"
			description="Активація послуги Гіпер.Нет"
			template="*109*210#">
		</command>
		<command
			title="Безкоштовний тиждень"
			description="Термін дії послуги тиждень безк. хвилин"
			template="*101*6#">
		</command>
		<command
			title="Залишок поза регіоном"
			description="Залишок хвилин та термін дії поза регіоном"
			template="*101*44#">
		</command>		
		<command
			title="Бонусний рахунок"
			description="Залишок на бонусному грошовому рахунку"
			template="*101*10#">
		</command>
		<command
			title="Безкоштовні СМС"
			description="Перевірка кількості безкоштовних СМС"
			template="*101*3#">
		</command>
	</group>
</carrier>