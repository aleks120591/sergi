<?xml version="1.0" encoding="UTF-8"?>
<carrier
	title = "Utel">
	<group
		title = "Основне"
		icon="money">
		<command
			title="Баланс"
			description="Перевірка балансу"
			template="*100#">
		</command>
		<command
			title="Додаткові пакети"
			description="Перевірка залишку додаткових пакетів"
			template="*121#">
		</command>
	</group>
	<group
		title = "Послуги"
		icon="services">
		<command
			title="„Зателефонуй мені”"
			description="Запит послуги «Передзвони мені»"
			template="*110*{phone}#">
			<field
				title="Номер телефону"
				description="Виберіть номер телефону для відправки запиту"
				tag="phone"
				type="contact">
				<modifier
					type="complete"
					template="0911234567"
				/>
			</field>
		</command>
		<command
			title="Переказ коштiв"
			description="Перевести гроші на номер телефону"
			template="*129*{phone}*{sum}#">
			<field
				title="Номер телефону"
				description="Виберіть номер телефону для відправки грошей"
				tag="phone"
				type="contact">
				<modifier
					type="complete"
					template="0911234567"
				/>
			</field>
			<field
				title="Сума"
				description="Сума в гривнях"
				tag="sum"
				type="digits">
			</field>
		</command>
	</group>
</carrier>