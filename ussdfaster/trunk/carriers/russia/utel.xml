<?xml version="1.0" encoding="UTF-8"?>
<carrier
	title = "Utel">
	<group
		title = "Основные услуги"
		icon="money">
		<command
			title="Баланс"
			description="Запрос баланса"
			template="*102#">
		</command>
		<command
			title="«Перезвони мне»"
			description="Абоненту будет отправлен СМС с просьбой перезвонить Вам"
			template="*123*{phone}#">
			<field
				title="Номер телефона"
				description="Выберите или введите номер телефона"
				tag="phone"
				type="contact">
				<modifier type="complete" template="89100000000"/>
			</field>
		</command>
		<command
			title="«Прямая передача»"
			description="Напрямую пополнить счет абонента"
			template="*126*{phone}*{sum}#">
			<field
				title="Номер телефона"
				description="Выберите или введите номер телефона"
				tag="phone"
				type="contact">
				<modifier type="complete" template="9160000000"/>
			</field>
			<field
				title="Сумма"
				description="Сумма для перевода"
				tag="sum"
				type="digits">
			</field>
		</command>
		<command
			title="«Подтверждение перевода»"
			description="Подтверждение перевода обещанного платежа"
			template="*126*2*{num}#">
			<field
				title="Код"
				description="Код для подтверждения"
				tag="num"
				type="digits">
			</field>
		</command>
	</group>
