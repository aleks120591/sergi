<?xml version="1.0" encoding="UTF-8"?>
<carrier
   title = "Beeline Russia">
   <group
      title = "Баланс"
      icon="money">
      <command
         title="Баланс"
         description="Узнать текущий баланс"
         template="*102#">
      </command>
      <command
         title="СМС"
         description="Узнать количество оставшихся СМС"
         template="*106#">
      </command>
      <command
         title="Интернет"
         description="Узнать остаток трафика"
         template="*107#">
      </command>
   </group>
   <group
      title = "Услуги">
      <command
         title="Доверительный платеж"
         description="Попросить денег у Beeline"
         template="*141#">
      </command>
      <command
         title="Пополни мне счет"
         description="Отправить смс с просьбой пополнить вам счет"
         template="*143*{phone}#">
         <field
            title="Номер телефона"
            description="Кому отправить запрос"
            tag="phone"
            type="contact">
            <modifier
               type="complete"
               template="9030000000"
            />
         </field>
      </command>
      <command
         title="Позвони мне"
         description="Отправить смс с просьбой позвонить вам"
         template="*144*{phone}#">
         <field
            title="Номер телефона"
            description="Кому отправить запрос"
            tag="phone"
            type="contact">
            <modifier
               type="complete"
               template="9030000000"
            />
         </field>
      </command>
      <command
         title="Звонок за счет друга"
         description="Позвонить за счет друга"
         template="05050{phone}">
         <field
            title="Номер телефона"
            description="Кому будем звонить"
            tag="phone"
            type="contact">
            <modifier
               type="complete"
               template="9030000000"
            />
         </field>
      </command>
      <command
         title="GPRS-пакеты"
         description="Покупайте GPRS пакетами — и получайте больше GPRS-интернет трафика за те же деньги!"
         template="0674{action}">
         	<field
		          title="Выберите объем"
		          description="Выберите то количество, которое нужно именно вам, и пользуйтесь услугой «Мобильный GPRS-Интернет» по более выгодным ценам"
		          tag="action"
		          type="select">
		          <customData>
		              <option text="15 МБ (45 руб)" value="69015"/>
		              <option text="60 МБ (145 руб)" value="69060"/>
		              <option text="200 МБ (295 руб)" value="69200"/>
		              <option text="450 МБ (495 руб)" value="69450"/>
		              <option text="3 Гб (745 руб)" value="003"/>
		          </customData>
		    </field>
      </command>
   </group>
   <group
      title="Разное"
      icon="more">
      <command
         title="Время"
         description="Узнать точное время"
         template="100">
      </command>
      <command
         title="Абонентская служба Beeline"
         description="Звонок в сужбу поддержки Beeline"
         template="0611">
       </command>
    </group>
</carrier>
