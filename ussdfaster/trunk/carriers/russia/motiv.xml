			title="«Жду звонка»"
			description="Отправить смс с просьбой перезвонить Вам"
			template="*105*8{phone}#">
			<field
				title="Номер телефона"
				description="Кому отправить запрос"
				tag="phone"
				type="contact">
				<modifier
					type="complete"
					template="3430000000"
				/>
			</field>
		</command>
		<command
			title="Отложенный платеж"
			description="Запросить отложенный платеж"
			template="*103*103#">
		</command>
		<command
			title="Проверка «Мобильного статуса»"
			description="Проверить статус выбранного абонента"
			template="*104*104*{phone}#">
			<field
				title="Номер телефона"
				description="Кого проверить статус"
				tag="phone"
				type="contact">
				<modifier
					type="complete"
					template="3430000000"
				/>
			</field>
		</command>
		<command
			title="Запрос «Выручай»"
			description="Попросить пополнить Вам счет"
			template="*104*106*8{phone}#">
			<field
				title="Номер телефона"
