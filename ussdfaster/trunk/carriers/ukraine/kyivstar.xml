<?xml version="1.0" encoding="UTF-8"?>
<carrier
	title = "Київстар">
	<group
		title = "Рахунок"
		icon="money">
		<command
			title="Баланс"
			description="Перевірка залишку коштів на рахунку"
			template="*111#">
		</command>
		<command
			title="Бонуси"
			description="Кількість накопичених бонусів"
			template="*112#">
		</command>
		<command
			title="Поповнити рахунок (свій)"
			description="Поповнити свій рахунок за допомогою ваучера"
			template="*123*{voucher}#">
			<field
				title="Код з ваучера"
				description="Введіть код ваучера"
				tag="voucher"
				type="digits">
			</field>
		</command>
		<command
			title="Поповнити рахунок (комусь)"
			description="Поповнити рахунок для вибраного контакту"
			template="*126*{voucher}*{phone}#">
			<field
				title="Номер телефону"
				description="Кому поповнити рахунок"
				tag="phone"
				type="contact">
			</field>
			<field
				title="Код з ваучера"
				description="Введіть код ваучера"
				tag="voucher"
				type="digits">
			</field>
		</command>
		<command
			title="Перевести кошти"
			description="Перевести гроші іншому абоненту. Ви отримаєте відповідь такого виду: ' Підтвердження командою *125*????# '. Запам'ятайте код '????'"
			template="*124*{amount}*{phone}#">
			<field
				title="Номер телефону"
				description="Кому поповнити рахунок"
				tag="phone"
				type="contact">
				<modifier
					type="complete"
					template="380670000000"
				/>
			</field>
			<field
				title="Сума переводу"
				description="Введіть суму переводу в грн."
				tag="amount"
				type="digits">
			</field>
		</command>
		<command
			title="Перевести кошти (підтвердження)"
			description="Підтвердити переведення грошей іншому абоненту"
			template="*125*{code}#">
			<field
				title="Код підтвердження"
				description="Введіть 4-значний код, наприклад 0123"
				tag="code"
				type="digits">
			</field>
		</command>
	</group>
	<group
		title = "Інформаційні"
		icon="services">
		<command
			title="Дізнатись свій тариф"
			description=""
			template="*100*01*2#">
		</command>
		<command
			title="Дізнатись свій номер"
			description=""
			template="*161#">
		</command>
		<command
			title="Дізнатись строк дії номера"
			description=""
			template="*114#">
		</command>
		<command
			title="Дізнатись точний час"
			description=""
			template="*160#">
		</command>
	</group>
	<group
		title = "«Передзвони мені»"
		icon="callme">
		<command
			title="Запит"
			description="Запит послуги «Передзвони мені»"
			template="*130*{phone}#">

			<field
				title="Номер телефону"
				description="Виберіть номер телефону для відправки запиту"
				tag="phone"
				type="contact">
				<modifier
					type="complete"
					template="380670000000"
				/>
			</field>
		</command>
		<command
			title="Запит (у роумінгу)"
			description="Запит послуги «Передзвони мені» у роумінгу"
			template="*131*{phone}#">
		</command>
	</group>
	<group title = "Інтернет">
		<command
			title="Термін дії 'Інтернет без меж'"
			description="Перевірити статус і термін дії послуги 'Інтернет без меж'"
			template="*154#">
		</command>

		<command
			title="Замовити 'Інтернет без меж' з подобовою оплатою"
			description="Замовити послугу 'Інтернет без меж' з подобовою оплатою (1.34 грн/день)"
			template="*154*1#">
		</command>
		<command
			title="Замовити 'Інтернет без меж' одразу на 30 днів"
			description="Замовити послугу 'Інтернет без меж' з передоплатою на 30 днів (29.03 грн)"
			template="*154*3#">
		</command>
		<command
			title="Залишок пакетів даних"
			description="Залишок інтернет трафіку"
			template="*121#">
		</command>
		<command
			title="Замовити пакети даних"
			description="Замовлення пакетів даних (ПЛАТНО!)"
			template="*121*{size}#">
			<field
	          title="Розмір"
	          description="Виберіть розмір пакету"
	          tag="size"
	          type="select">
	          <customData>
	              <option text="20 Mb (20 грн)" value="20"/>
	              <option text="100 Mb (50 грн)" value="100"/>
	              <option text="1000 Mb (99 грн)" value="1000"/>
	              <option text="5000 Mb (119 грн)" value="5000"/>
	              <option text="Нічний [0:00-8:00] (49грн)" value="5000*1"/>
	              <option text="«Спробуйте Інтернет» 50 мб (25грн)" value="50"/>
	          </customData>
	      	</field>
		</command>
		<command
			title="Залишок пакетів «Смартфон»"
			description="Залишок інтернет трафіку «Смартфон»"
			template="*120#">
		</command>
		<command
			title="Замовити пакети «Смартфон»"
			description="Замовлення пакетів «Смартфон» (ПЛАТНО!)"
			template="*120*{size}#">
			<field
	          title="Розмір"
	          description="Виберіть розмір пакету"
	          tag="size"
	          type="select">
	          <customData>
	              <option text="50мб\25смс\25ммс (40грн)" value="50"/>
	              <option text="200мб\50смс\50ммс (70грн)" value="100"/>
	              <option text="500мб\100смс\100ммс (80грн)" value="500"/>
	          </customData>
	      	</field>
		</command>
	</group>
	<group
		title = "Перенаправлення"
		icon="builtin">
		<command
			title="Перенаправлення вхідних дзвінків в нікуди"
			description="Абонент почує повідомлення від оператора: 'Ви набрали не вірний номер. Перевірте його ще раз і перетелефонуйте!'"
			template="*002*8067#">
		</command>
		<command
			title="Відключити всі типи перенаправлення"
			template="##002#">
		</command>
	</group>
</carrier>
