<?xml version="1.0" encoding="UTF-8"?>
<carrier
	title = "МТС (Беларусь)">
	<group
		title = "Баланс"
		icon="money">
		<command
			title="Баланс"
			description="Запрос баланса"
			template="*100#">
		</command>
		<command
			title="Пополнить счет"
			description="Пополнить собственный счет"
			template="*115*{voucher}#">
			<field
				title="Код пополнения"
				description="Введите код ваучера"
				tag="voucher"
				type="digits">
			</field>
		</command>
	</group>
	<group
		title = "Услуги">
		<command
			title="«Перезвони мне»"
			description="Абоненту будет отправлен СМС с просьбой перезвонить Вам"
			template="*120*{phone}#">
			<field
				title="Номер телефона"
				description="Выберите или введите номер телефона"
				tag="phone"
				type="contact">
				<modifier type="complete" template="0000000"/>
			</field>
		</command>
		<command
			title="«Прямая передача»"
			description="Напрямую пополнить счет абонента"
			template="*115*{phone}*{sum}#">
			<field
				title="Номер телефона"
				description="Выберите или введите номер телефона"
				tag="phone"
				type="contact">
				<modifier type="complete" template="375000000000"/>
			</field>
			<field
				title="Сумма"
				description="Сумма для перевода"
				tag="sum"
				type="digits">
			</field>
		</command>
		<command
			title="«Обещанный платеж»"
			description="Обещанный платеж"
			template="*113*{sum}#">
			<field
				title="Сумма"
				description="Не более 10 000 руб на 10 дней"
				tag="sum"
				type="digits">
			</field>
		</command>
		<command
			title="«Мой тарифный план»"
			description="Узнать название своего ТП"
			template="*111*12#">
		</command>
		<command
			title="Помощь"
			description="Информация о USSD"
			template="*111*18#">
		</command>
	</group>
</carrier>