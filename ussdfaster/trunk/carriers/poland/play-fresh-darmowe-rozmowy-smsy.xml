<?xml version="1.0" encoding="UTF-8"?>
<carrier
	title = "Play">
	<group title = "Play Fresh - Darmowe Rozmowy i SMSy">
		<command
			title="Konto"
			description="Stan konta"
			template="*101#">
		</command>
		<command
			title="Minuty promocyjne"
			description="Stan zebranych minut do wszystkich sieci"
			template="*102#">
		</command>
		<command
			title="Minuty do wszystkich"
			description="Stan minut do wszystkich sieci"
			template="*104#">
		</command>
		<command
			title="Minuty do Play i stacjonarnych"
			description="Stan minut do Play i do sieci stacjonarnych"
			template="*105#">
		</command>
		<command
			title="Minuty do Play"
			description="Stan minut do Play"
			template="*107#">
		</command>
		<command
			title="SMSy do Play"
			description="Ilość promocyjnych SMS-ów"
			template="*109#">
		</command>
		<command
			title="Play24Menu"
			description="Zarządzanie kontem"
			template="*111#">
		</command>
		
	</group>
	<group title = "Pakiety">
		<command
			title="Pakiet 30 minut za 6 zł"
			description="Pakiet 30 minut do wszystkich krajowych sieci stacjonarnych i komórkowych"
			template="*111*62*{action}#">
			<field
				title="Działanie"
				description="Co chcesz zrobić?"
				tag="action"
				type="select">
				<customData>
					<option text="Zakup pakietu" value="1"/>
					<option text="Sprawdzenie statusu" value="3"/>
				</customData>
			</field>
		</command>
		<command
			title="Pakiet 10 zł za 5 zł"
			description="Zamiana 5 zł z konta głównego na 10 zł na koncie bonusowym"
			template="*111*81*{action}#">
			<field
				title="Działanie"
				description="Co chcesz zrobić?"
				tag="action"
				type="select">
				<customData>
					<option text="Zakup pakietu" value="1"/>
					<option text="Sprawdzenie statusu" value="3"/>
				</customData>
			</field>
		</command>
		<command
			title="100 minut do Play i na stacjonarne w Play Fresh"
			description="Pakietu 100 minut do Play i na stacjonarne w Play Fresh"
			template="*{action}#">
			<field
				title="Działanie"
				description="Co chcesz zrobić?"
				tag="action"
				type="select">
				<customData>
					<option text="Zakup pakietu" value="111*34*1"/>
					<option text="Sprawdzenie ilości minut" value="105"/>
				</customData>
			</field>
		</command>
		<command
			title="Nieograniczone rozmowy w Play"
			description="Nielimitowane rozmowy z Play przez 30 dni "
			template="*111*82*{action}#">
			<field
				title="Działanie"
				description="Co chcesz zrobić?"
				tag="action"
				type="select">
				<customData>
					<option text="Zakup pakietu" value="1"/>
					<option text="Sprawdzenie czasu ważności usługi" value="3"/>
				</customData>
			</field>
		</command>
		<command
			title="Program Doładowań"
			description="Przyznanie środków bonusowych po osiągnięciu określonych kwot doładowań w jednym miesiącu kalendarzowym"
			template="*111*{action}#">
			<field
				title="Działanie"
				description="Co chcesz zrobić?"
				tag="action"
				type="select">
				<customData>
					<option text="Aktywacja" value="50*1"/>
					<option text="Sprawdzenie statusu" value="50*3"/>
					<option text="Sprawdzenie sumy doładowań z aktualnego miesiąca" value="127*5"/>
				</customData>
			</field>
		</command>
	</group>
	<group title = "Dane">
		<command
			title="Pakiety Internet w telefonie"
			description="Internet w telefonie All Inclusive (dzialaja w zasięgu sieci Plus i Play)"
			template="*111*{typ}*{action}#">
			<field
				title="Typ pakietu"
				description="Wybierz typ pakietu?"
				tag="typ"
				type="select">
				<customData>
					<option text="25 MB" value="212"/>
					<option text="100 MB" value="213"/>
					<option text="200 MB" value="214"/>
					<option text="500 MB" value="215"/>
					<option text="1 GB" value="215"/>
				</customData>
			</field>
			<field
				title="Działanie"
				description="Co chcesz zrobić?"
				tag="action"
				type="select">
				<customData>
					<option text="Zakup pakietu" value="1"/>
					<option text="Sprawdzenie statusu" value="3"/>
				</customData>
			</field>
		</command>
		<command
			title="Sprawdzenie stanu pakietów internetowych"
			description="Sprawdzenie ilości wykorzystanych MB z zakupionych pakietów"
			template="*108#">
		</command>
	</group>
</carrier>
