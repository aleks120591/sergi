<?xml version="1.0" encoding="UTF-8"?>
<carrier
	title = "МТС (Россия)">
	<group
		title = "Баланс"
		icon="money">
		<command
			title="Баланс"
			description="Запрос баланса"
			template="*100#">
		</command>
		<command
			title="Остаток"
			description="Запрос оставшихся минут и SMS"
			template="*100*1#">
		</command>
		<command
			title="Долг"
			description="Запрос лимита и суммы к оплате"
			template="*132#">
		</command>
		<command
			title="Остаток по акциям"
			description="Запрос оставшихся минут и SMS по акциям"
			template="*100*2#">
		</command>
		<command
			title="Последние затраты"
			description="В открывшихся окнах нажать сначала 1, потом 2."
			template="*152#">
		</command>
		<command
			title="«Мой тарифный план»"
			description="Узнать название своего ТП"
			template="*111*59#">
		</command>
		<command
			title="Помощь"
			description="Информация о USSD"
			template="*111#">
		</command>
	</group>
	<group title = "Услуги">
		<command
			title="«Перезвони мне»"
			description="Отправить абоненту СМС с просьбой перезвонить Вам"
			template="*110*{phone}#">
			<field
				title="Номер телефона"
				description="Выберите или введите номер телефона"
				tag="phone"
				type="contact">
				<modifier type="complete" template="89100000000"/>
			</field>
		</command>
		<command
			title="«Пополни мне счёт»"
			description="Отправить абоненту СМС с просьбой пополнить Вам счёт"
			template="*116*{phone}#">
			<field
				title="Номер телефона"
				description="Выберите или введите номер телефона"
				tag="phone"
				type="contact">
				<modifier type="complete" template="9160000000"/>
			</field>
		</command>
		<command
			title="«Прямая передача»"
			description="Напрямую пополнить счёт абонента МТС"
			template="*112*{phone}*{sum}#">
			<field
				title="Номер телефона"
				description="Выберите или введите номер телефона"
				tag="phone"
				type="contact">
				<modifier type="complete" template="9160000000"/>
			</field>
			<field
				title="Сумма"
				description="Сумма для перевода"
				tag="sum"
				type="digits">
			</field>
		</command>
		<command
			title="«Прямая передача (подтверждение)»"
			description="Подтвердить заявку на пополнение счёта абонента МТС"
			template="*112*{code}#">
			<field
				title="Код подтверждения"
				description="Введите код подтверждения, полученный на предыдущем шаге"
				tag="sum"
				type="digits">
			</field>
		</command>
		<command
			title="«Обещанный платёж»"
			description="Обещанный платёж"
			template="*111*32#">
		</command>
	</group>
</carrier>