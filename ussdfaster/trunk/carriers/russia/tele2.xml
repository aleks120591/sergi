<?xml version="1.0" encoding="UTF-8"?>
<carrier
	title="Теле2">
	<group
		title="Тариф"
		icon="services">
		<command
			title="Баланс"
			description="Проверка остатка на счету"
			template="*105#">
		</command>
		<command
			title="Название тарифа"
			description="Узнать название текущего тарифа"
			template="*108#">
		</command>	
		<command
			title="Параметры тарифа"
			description="Узнать параметры текущего тарифа"
			template="*107#">
		</command>	
		<command
			title="Свой номер"
			description="Узнать свой номер телефона"
			template="*201#">
		</command>	
		<command
			title="Отмена всех переадресаций"
			description="Отменить все переадресации (перед роумингом)"
			template="##002#">
		</command>	
		<command
			title="Карта оплаты"
			description="Активировать карту оплаты"
			template="*106*{number}#">
			<field
				title="Код карты"
				description="Код карты оплаты"
				tag="number"
				type="digits">
			</field>
		</command>
		<command
			title="«Звонок в роуминге»"
			description="Звонок в роуминге"
			template="*147*{phone}#">
			<field
				title="Номер телефона"
				description="Кому позвонить"
				tag="phone"
				type="contact">
				<modifier
					type="complete"
					template="+79050000000"/>
			</field>
		</command>
	</group>
	<group
		title="Интернет"
		icon="more">
		<command
			title="Подключение «Один за один»"
			description="Подключить услугу 1 МБ трафика за 1 руб."
			template="*116*6*1#">
		</command>
		<command
			title="Отключение «Один за один»"
			description="Отключить услугу 1 МБ трафика за 1 руб."
			template="*116*6*0#">
		</command>
		<command
			title="Статус услуги «Один за один»"
			description="Узнать статус услуги 1 МБ трафика за 1 руб."
			template="*116*6#">
		</command>
	</group>
	<group
		title="При нуле"
		icon="money">
		<command
			title="«Обещанный платёж»"
			description="Запросить кредит 30 рублей (действует в течение 3-х дней)"
			template="*122*1#">
		</command>
		<command
			title="«Маячок»"
			description="Отправить СМС с просьбой перезвонить Вам"
			template="*118*{phone}#">
			<field
				title="Номер телефона"
				description="Кому отправить запрос"
				tag="phone"
				type="contact">
				<modifier
					type="complete"
					template="89520000000"
				/>
			</field>
		</command>
		<command
			title="«Пополни мой счёт»"
			description="Отправить СМС с просьбой пополнить Ваш счёт"
			template="*123*{phone}#">
			<field
				title="Номер телефона"
				description="Кому отправить запрос"
				tag="phone"
				type="contact">
				<modifier
					type="complete"
					template="89520000000"/>
			</field>
		</command>
		<command
			title="«Мобильный перевод»"
			description="Перевести деньги другому абоненту"
			template="*145*{phone}*{amount}#">
			<field
				title="Номер телефона"
				description="Кому перевести деньги"
				tag="phone"
				type="contact">
				<modifier
					type="complete"
					template="89520000000"/>
			</field>
			<field
				title="Сумма перевода"
				description="Введите сумму перевода, руб."
				tag="amount"
				type="digits">
				<modifier
					type="complete"
					template="50"
				/>
			</field>
		</command>
	</group>
</carrier>