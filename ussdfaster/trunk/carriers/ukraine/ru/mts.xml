<?xml version="1.0" encoding="UTF-8"?>
<carrier
	title = "МТС (Припейд)">
	<group
		title = "Финансы"
		icon="money">
		<command
			title="Баланс"
			description="Информация о состоянии счета, времени дейсвия и тарифной модели"
			template="*101#">
		</command>
		<command
			title="Перевести деньги"
			description="Запрос на перевод средств"
			template="*150*{phone}*{amount}#">
			<field
				title="Кому перевести"
				description="Виберите номер абонента, которому будут переведены деньги"
				tag="phone"
				type="contact">
			</field>			
			<field
				title="Сумма"
				description="Сумма в гривнах, должна быть кратна 5 грн"
				tag="amount"
				type="digits">
			</field>
		</command>
		<command
			title="Управление счетом"
			description="Меню команд для управления счетом"
			template="*121#">
		</command>		
	</group>
	<group
		title = "«Перезвони мне»"
		icon="callme">
		<command
			title="Запрос"
			description="Запрос услуги «Перезвони мне»"
			template="*104*{phone}#">

			<field
				title="Номер телефона"
				description="Выберите номер телефона для отправки запроса"
				tag="phone"
				type="contact">
			</field>
		</command>
		<command
			title="Помощь"
			description="Инструкция к услуге"
			template="*104*02#">
		</command>
		<command
			title="Доступно запросов"
			description="Информация о количистве оставшихся запросов"
			template="*104*0#">
		</command>		
	</group>
	<group
		title = "Услуги"
		icon="services">
		<command
			title="„Вам звонили”: Статус"
			description="Проверка статуса услуги „Вам звонили”"
			template="*120*1#">
		</command>
		<command
			title="„Вам звонили”: Активировать"
			description="Активировать услугу „Вам звонили”"
			template="*120*11#">
		</command>
		<command
			title="„Вам звонили”: Деактивировать"
			description="Деактивировать услугу „Вам звонили”"
			template="*120*12#">
		</command>
		<command
			title="„Есть связь”: Статус"
			description="Проверка статуса услуги „Есть связь”"
			template="*120*2#">
		</command>
		<command
			title="„Есть связь”: Активировать"
			description="Активировать услугу „Есть связь”"
			template="*120*21#">
		</command>
		<command
			title="„Есть связь”: Деактивировать"
			description="Деактивировать услугу „Есть связь”"
			template="*120*22#">
		</command>
		<command
			title="„Я на связи”: Статус"
			description="Проверка статуса услуги „Я на связи”"
			template="*120*3#">
		</command>
		<command
			title="„Я на связи”: Активировать"
			description="Активировать услугу „Я на связи”"
			template="*120*31#">
		</command>
		<command
			title="„Я на связи”: Деактивировать"
			description="Деактивировать услугу „Я на связи”"
			template="*120*32#">
		</command>	
	</group>
	<group
		title = "Супер">
		
		<command
			title="Бонусы"
			description="Остаток бесплатных минут"
			template="*101*4#">
		</command>
		<command
			title="Бесплатная неделя"
			description="Срок действия услуги и остаток"
			template="*101*6#">
		</command>
		<command
			title="Остаток вне региона"
			description="Остаток минут и срок действия вне региона"
			template="*101*44#">
		</command>		
		<command
			title="Бонусный счет"
			description="Остаток на бонусном денежном счету"
			template="*101*10#">
		</command>
		<command
			title="Безплатные СМС"
			description="Проверка количества бесплатных СМС"
			template="*101*3#">
		</command>
	</group>
</carrier>