<?xml version="1.0" encoding="UTF-8"?>
<carrier
	title = "T-Mobile">
	<group
		title = "Main"
		icon="money">
		<command
			title="Balance"
			description="Check the balance on my account"
			template="#225#">
		</command>
		<command
			title="Activate forwarding"
			description="Activating call forwarding"
			template="*{type}1{phone}">
			<field
				title="Phone number"
				description="Number for forwarding"
				tag="phone"
				type="contact">
				<modifier
					type="complete"
					template="1234567890"
				/>
			</field>
			<field
                title="Forwarding type"
                description="Which calls should be forwarded"
                tag="type"
                type="select">
                <customData>
                    <option text="Unconditional" value="72"/>
                    <option text="No reply" value="42"/>
                    <option text="Not reachable" value="62*"/>
                    <option text="If busy" value="10"/>
                </customData>
            </field>
		</command>
		<command
			title="Deactivate forwarding"
			description="Deactivating unconditional call forwarding "
			template="*{type}">
			<field
                title="Forwarding type"
                description="Which fwd types should be deactivated"
                tag="type"
                type="select">
                <customData>
                    <option text="Unconditional" value="73"/>
                    <option text="No reply" value="93"/>
                    <option text="If busy" value="91"/>
                </customData>
            </field>
		</command>
		<command
			title="Deactivate Call Waiting"
			description="Deactivate Call Waiting"
			template="*70">
		</command>
		<command
			title="Block Caller ID"
			description="Block Caller ID"
			template="*67">
		</command>
		<command
			title="Last incoming call"
			description="Find out the last incoming call that you received"
			template="*69">
		</command>
	</group>
</carrier>