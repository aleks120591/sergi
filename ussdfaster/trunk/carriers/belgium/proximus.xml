<?xml version="1.0" encoding="UTF-8"?>
<carrier
	title = "Proximus">
	<group
		title = "Main">
		<command
			title="Balance"
			description="Check the balance on my account"
			template="#121#">
		</command>
		<command
			title="Data Plan"
			description="Check Dataplan"
			template="#120#">
		</command>
		<command
			title="Recharge Code"
			description="Recharge store code"
			template="#121*{voucher}#">
			<field
				title="Voucher Code"
				description="Enter Voucher Code"
				tag="voucher"
				type="digits">
			</field>
		</command>
		<command
			title="Recharge Bank"
			description="Recharge Bank"
			template="#124*{sum}#">
			<field
				title="Recharge Amount"
				description="Select one"
				tag="voucher"
				type="select">
                <customData>
                    <option text="15 euro" value="15"/>
                    <option text="25 euro" value="25"/>
                    <option text="50 euro" value="50"/>
                </customData>
			</field>
		</command>
	</group>
</carrier>