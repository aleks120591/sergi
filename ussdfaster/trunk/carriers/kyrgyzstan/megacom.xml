<?xml version="1.0" encoding="UTF-8"?>
<carrier
	title = "MegaCom">
	<group
		title = "Main">
		<command
			title="Баланс"
			description="Проверка баланса"
			template="*500#">
		</command>
		<command
			title="Точное время"
			description="Получить точное время"
			template="*060#">
		</command>
		<command
			title="Тарифный план"
			description="Проверка собственного телефонного номера и тарифного плана"
			template="*112#">
		</command>
		<command
			title="Счет: прошлый месяц"
			description="Проверка счета за прошлый месяц"
			template="*080#">
		</command>
		<command
			title="Счет: текущий месяц"
			description="Проверка счета за текущий месяц (баланс от начала месяца до прошедших суток)"
			template="*081#">
		</command>
		<command
			title="Скидки"
			description="Проверка текущих скидок"
			template="*505#">
		</command>
		<command
			title="Активация карты"
			description="Активация карт оплаты (100, 200, 400, 700)"
			template="*555#{voucher}#">
			<field
				title="Код с ваучера"
				description="Введите код ваучера"
				tag="voucher"
				type="digits">
			</field>
		</command>
		<command
			title="Второе дыхание"
			description="Позволяет абоненту получить кредит на свой лицевой счет для использования на любые услуги связи в счет будущей оплаты"
			template="*400#10{action}#">
			<field
		          title="Дествие"
		          description="Что сделать с этой услугой?"
		          tag="action"
		          type="select">
		          <customData>
		              <option text="Подключение" value="#1"/>
		              <option text="Досрочно погасить" value="#2"/>
		              <option text="Внесение гарантийного платежа" value="#5"/>
		              <option text="Отключение от SMS рассылки" value="#00"/>
		              <option text="Подключение SMS рассылк" value="#9"/>
		              <option text="Информация об услуге" value=""/>
		          </customData>
		      </field>
		</command>
	</group>
</carrier>